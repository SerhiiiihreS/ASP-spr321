 @model ASP_spr321.Data.Entities.Product


<div class="col" >
    <a class="nav-link text-dark h-100" asp-controller="Shop" asp-action="Category" asp-route-id="@Model.Slug">
        <div class="card h-100">
            <div style="border:2px solid green">
                <img src="/Shop/Image/@(Model.ImagesCsv.Split(',').First())" alt="Image" class="card-img-top" />
            </div>
            
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
            </div>
            <div style="background-color:darkslategray;color:aliceblue">
                <p class="card-text">@Model.Description</p>
            </div>
            <div class="card-footer">
                <h3 style="color:cadetblue"> @Model.Price.ToString("0.00") ₴</h3>
                <p style="color:green">В наявності - @Model.Stock шт</p>
            </div>
        </div>
    </a>
</div>