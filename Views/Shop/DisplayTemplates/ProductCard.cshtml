 @model ASP_spr321.Data.Entities.Product


<div class="col" >
    <a class="nav-link text-dark h-100" asp-controller="Shop" asp-action="Product" asp-route-id="@Model.Slug ?? Model.Id.ToString())">
        <div class="card h-100">
            <div >
                <img src="/Shop/Image/@(Model.ImagesCsv.Split(',').First())" alt="Image" class="card-img-top" />
            </div>
            
            <div class="card-body" >
                <div class="card-fab" data-cart-product-id="@Model.Id"><i class="bi bi-cart-plus"></i></div>
                <h5 class="card-title">@Model.Name</h5>
            </div>
            <div style="background-color:darkslategray;color:aliceblue">
                <h7 class="card-text">@Model.Description</h7>
            </div>
            <div class="card-footer">
                <h3 style="color:cadetblue"> @Model.Price.ToString("0.00") ₴</h3>
                <p style="color:green;font-size:1.6ex">В наявності - @Model.Stock шт</p>
                
            </div>
        </div>
    </a>
</div>