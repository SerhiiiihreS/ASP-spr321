 @model ASP_spr321.Data.Entities.Product


<div class="col">
	<a class=" nav-link  h-10" asp-controller="Shop" asp-action="Category" asp-route-id="@Model.Slug">
		<div class="card h-100">
			<img src="/Shop/Image/@(Model.Category.ImageUrl)" alt="Image" class="card-img-top" />
			<div class="card-body">
				<h5 class="card-title">@Model.Category.Name</h5>
				<p class="card-text">@Model.Category.Description</p>
			</div>
		</div>
	</a>

</div>
