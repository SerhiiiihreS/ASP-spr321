@model ASP_spr321.Models.Shop.ShopIndexViewModel
@{
    ViewData["Title"] = "Shop";
}
<div class="text-center">
    <h1 class="display-4">Крамниця</h1>
</div>

@foreach(var category in Model.Categories)
{
    <img src="/Shop/Image/@(category.ImageUrl)" alt="Image" style="border-image:auto solid red; border-radius:0.5px; height:100px; width:100px" />
    <p>@category.Name</p>
}