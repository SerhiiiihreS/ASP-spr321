                            @if (Model.ValidationErrors?.ContainsKey(fieldName) ?? false)
                            {
                                <div class="invalid-feedback">
                                    @Model.ValidationErrors[fieldName]
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <button class="btn btn-outline-secondary">Надіслати</button>

            </div>
        </div>
    </form>

}
